{
  "description": "Open certain URLs on Chrome",
  "manifest_version": 2,
  "name": "OnChrome",
  "version": "1.0.1",
  "applications": {
    "gecko": {
      "id": "onchrome@gervas.io",
      "strict_min_version": "61.0"
    }
  },
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png",
    "16": "images/icon16.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "options.html",
    "default_icon": {
      "128": "images/icon128.png",
      "48": "images/icon48.png",
      "16": "images/icon16.png"
    }
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "contextMenus",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
